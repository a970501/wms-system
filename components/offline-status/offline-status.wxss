/* components/offline-status/offline-status.wxss */
.offline-status {
  width: 100%;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.position-top {
  position: sticky;
  top: 0;
  z-index: 100;
}

.position-bottom {
  position: sticky;
  bottom: 0;
  z-index: 100;
}

.position-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.status-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-left: 6rpx solid #6c757d;
}

.status-bar.syncing {
  background: #e3f2fd;
  border-left-color: #2196f3;
}

.status-bar.pending {
  background: #fff3e0;
  border-left-color: #ff9800;
}

.status-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.offline-icon {
  animation: pulse 2s infinite;
}

.sync-icon {
  animation: rotate 1s linear infinite;
}

.pending-icon {
  animation: bounce 1s infinite;
}

.status-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
}

.status-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #fff;
  border: 1rpx solid #ddd;
  color: #666;
}

.action-btn.primary {
  background: #007aff;
  border-color: #007aff;
  color: #fff;
}

.sync-progress {
  width: 120rpx;
  margin-left: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #2196f3;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.sync-details {
  border-top: 1rpx solid #eee;
  background: #fff;
}

.details-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.details-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  font-size: 32rpx;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  color: #999;
}

.details-content {
  padding: 20rpx 30rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.detail-value.online {
  color: #4caf50;
}

.detail-value.offline {
  color: #f44336;
}

.details-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  background: #f8f9fa;
}

.detail-action-btn {
  flex: 1;
  font-size: 26rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  background: #007aff;
  border: none;
  color: #fff;
}

.detail-action-btn.danger {
  background: #f44336;
}

.detail-action-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}