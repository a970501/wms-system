<!-- components/chart/chart.wxml -->
<view class="chart-container" style="width: {{width}}; height: {{height}};">
  <!-- 加载状态 -->
  <view class="chart-loading" wx:if="{{loading}}">
    <text class="loading-text">图表加载中...</text>
  </view>
  
  <!-- 图表画布 -->
  <canvas 
    wx:else
    id="{{canvasId}}"
    type="2d" 
    class="chart-canvas"
    style="width: 100%; height: 100%;"
  />
  
  <!-- 导出按钮 -->
  <view class="chart-actions" wx:if="{{!loading}}">
    <button class="export-btn" size="mini" bindtap="exportImage">导出</button>
  </view>
</view>