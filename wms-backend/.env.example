# 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 数据库配置
DB_USERNAME=wms_user
DB_PASSWORD=your_secure_password_here

# JWT 配置
JWT_SECRET=your_very_long_random_secret_key_at_least_64_characters_long

# ========== 日志通知配置 ==========
# 启用通知功能
NOTIFICATION_ENABLED=true

# 邮件配置 (QQ邮箱示例)
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_smtp_authorization_code

# 通知收件人（多个用逗号分隔）
NOTIFICATION_EMAIL_TO=admin@example.com
NOTIFICATION_EMAIL_FROM=your_email@qq.com

# 企业微信机器人 Webhook URL（可选）
# 在企业微信群 -> 群机器人 -> 添加机器人 获取
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# ========== 微信通知配置 ==========
# 企业微信应用消息配置
WECHAT_WORK_CORP_ID=your_corp_id
WECHAT_WORK_AGENT_ID=your_agent_id
WECHAT_WORK_SECRET=your_corp_secret
WECHAT_WORK_ENABLED=false

# 微信公众号模板消息配置
WECHAT_OFFICIAL_APP_ID=your_official_app_id
WECHAT_OFFICIAL_APP_SECRET=your_official_app_secret
WECHAT_OFFICIAL_TEMPLATE_ID=your_template_id
WECHAT_OFFICIAL_ENABLED=false

# 微信小程序订阅消息配置
WECHAT_MINI_APP_ID=your_mini_app_id
WECHAT_MINI_APP_SECRET=your_mini_app_secret
WECHAT_MINI_TEMPLATE_ID=your_subscription_template_id
WECHAT_MINI_ENABLED=false

# 微信通知服务配置
WECHAT_NOTIFICATION_ENABLED=true
WECHAT_NOTIFICATION_PRIORITY=mini,official,work
WECHAT_NOTIFICATION_FALLBACK=true

# ========== 启动命令示例 ==========
# export DB_USERNAME=wms_user
# export DB_PASSWORD=your_password
# export JWT_SECRET=your_secret
# export NOTIFICATION_ENABLED=true
# export MAIL_USERNAME=xxx@qq.com
# export MAIL_PASSWORD=xxx
# export NOTIFICATION_EMAIL_TO=admin@example.com
# export NOTIFICATION_EMAIL_FROM=xxx@qq.com
# java -jar wms-simple-1.0.0.jar
