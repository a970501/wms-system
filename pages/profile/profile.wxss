/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.avatar-text {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  text-transform: uppercase;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  display: block;
}

.role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
  display: block;
}

.stats-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #409EFF;
  display: block;
}

.stat-label {
  font-size: 26rpx;
  color: #909399;
  margin-top: 10rpx;
  display: block;
}

.stat-divider {
  width: 2rpx;
  background: #EBEEF5;
  margin: 0 20rpx;
}

.menu-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.menu-section .section-title {
  padding: 20rpx 30rpx 10rpx;
  font-size: 26rpx;
  color: #909399;
  background: #f5f7fa;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #303133;
}

.menu-arrow {
  font-size: 36rpx;
  color: #C0C4CC;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  color: #F56C6C;
  font-size: 32rpx;
  border: none;
  border-radius: 16rpx;
}

.logout-btn::after {
  border: none;
}

.version-info {
  text-align: center;
  padding: 40rpx;
  color: #C0C4CC;
  font-size: 24rpx;
}

