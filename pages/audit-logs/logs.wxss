/* pages/audit-logs/logs.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.stats-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.stat-value {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-value.primary {
  color: #52c41a;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

.filter-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.filter-picker {
  flex: 1;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.filter-btn {
  background: #1890ff;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.logs-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.log-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.log-user {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.log-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.log-module {
  font-size: 26rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.log-separator {
  font-size: 24rpx;
  color: #ddd;
}

.log-action {
  font-size: 28rpx;
  color: #666;
}

.log-details {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.details-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

.log-footer {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.ip-text {
  font-size: 24rpx;
  color: #aaa;
}

.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-btn {
  background: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
  border-radius: 8rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
