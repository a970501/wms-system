/* pages/notification-settings/settings.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
  display: block;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.status-card {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.status-card.enabled {
  background: #e8f5e9;
}

.status-card.disabled {
  background: #ffebee;
}

.status-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
}

.status-card.enabled .status-text {
  color: #2e7d32;
}

.status-card.disabled .status-text {
  color: #c62828;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.config-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 12rpx 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.config-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.config-text {
  font-size: 26rpx;
  color: #666;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.tip {
  margin-top: 12rpx;
  padding: 16rpx;
  background: #fff8e1;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #f57c00;
}

.actions {
  padding: 20rpx 0;
}

.btn-save {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
}

.btn-test {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #667eea;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
}

.btn-piecework {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
}

.btn-test-small {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #fff;
  color: #667eea;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #667eea;
  border-radius: 36rpx;
  margin-top: 16rpx;
}

.help-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.help-num {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #667eea;
  color: #fff;
  font-size: 22rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.help-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 标签页样式 */
.tab-nav {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: 600;
}

.tab-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 微信通知相关样式 */
.recipients-section {
  margin-top: 30rpx;
}

.recipients-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recipients-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.btn-add-recipient {
  padding: 12rpx 24rpx;
  background: #667eea;
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.recipients-list {
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  overflow: hidden;
}

.recipient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.recipient-item:last-child {
  border-bottom: none;
}

.recipient-info {
  flex: 1;
}

.recipient-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.recipient-role {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  display: inline-block;
}

.recipient-actions {
  margin-left: 20rpx;
}

.btn-remove {
  padding: 8rpx 16rpx;
  background: #ff5252;
  color: #fff;
  font-size: 22rpx;
  border-radius: 16rpx;
  border: none;
}

.empty-recipients {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-text {
  font-size: 26rpx;
}

.tip-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
}

.tip-section .tip {
  margin-bottom: 8rpx;
  padding: 0;
  background: none;
}

.tip-section .tip-text {
  font-size: 24rpx;
  color: #667eea;
  line-height: 1.5;
}

/* 对话框样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog {
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 40rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.dialog-content {
  padding: 30rpx;
}

.dialog-content .form-item {
  margin-bottom: 24rpx;
}

.dialog-content .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.dialog-content .input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.dialog-content .input:focus {
  border-color: #667eea;
  outline: none;
}

.dialog-content .picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.dialog-actions {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
}

.confirm-btn {
  background: #667eea;
  color: #fff;
  border: none;
}

.save-section {
  padding: 20rpx 0 40rpx;
}
