/* 消息类型设置样式 */
.message-types-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.message-type-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.message-type-item:active {
  background: #e9ecef;
  border-color: #667eea;
}

.message-type-checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.message-type-checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.checkbox-icon {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.message-type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.message-type-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.message-type-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.message-type-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.btn-select-all,
.btn-clear-all {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
}

.btn-select-all {
  background: #667eea;
  color: #fff;
}

.btn-select-all:active {
  background: #5a67d8;
}

.btn-clear-all {
  background: #f5f5f5;
  color: #666;
}

.btn-clear-all:active {
  background: #e9ecef;
}

/* 邮件接收者消息类型显示样式 */
.recipient-message-types {
  margin-top: 8rpx;
}

.message-types-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 4rpx;
  display: block;
}

.message-types-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
}

.message-type-tag {
  font-size: 20rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

/* 邮件接收者操作按钮样式 */
.recipient-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.btn-settings {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  min-width: auto;
}

.btn-settings:active {
  background: #5a67d8;
}

/* 对话框中的消息类型选择样式 */
.message-types-selection {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 12rpx;
}

.message-types-selection .message-type-item {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.message-types-selection .message-type-item:active {
  background: #e9ecef;
  border-color: #667eea;
}

.message-types-selection .message-type-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 12rpx;
}

.message-types-selection .message-type-checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.message-types-selection .checkbox-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

.message-types-selection .message-type-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 2rpx;
}

.message-types-selection .message-type-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
}