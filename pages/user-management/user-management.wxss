/* pages/user-management/user-management.wxss - UI/UX Pro Max */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #F8FAFC 0%, #EEF2FF 100%);
}

.header {
  text-align: center;
  padding: 48rpx 0 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
  display: block;
  letter-spacing: 1rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 16rpx;
  display: block;
}

.loading-tip, .empty-tip {
  text-align: center;
  padding: 80rpx;
  color: #9CA3AF;
  font-size: 30rpx;
}

.user-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.user-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
  transition: background 0.2s ease;
}

.user-item:last-child {
  border-bottom: none;
}

.user-item:active {
  background: #F9FAFB;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

.user-avatar text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  text-transform: uppercase;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #1F2937;
}

.user-meta {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.real-name {
  font-size: 26rpx;
  color: #6B7280;
  margin-right: 16rpx;
}

.role-tag {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
  color: #6366F1;
  border-radius: 8rpx;
  font-weight: 500;
}

.role-tag.admin {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  color: #D97706;
}

.user-status {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.status-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.status-dot.active {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.5);
}

.status-dot.inactive {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.5);
}



/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  backdrop-filter: blur(8rpx);
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  z-index: 101;
  overflow: hidden;
  box-shadow: 0 32rpx 80rpx rgba(0, 0, 0, 0.25);
}

.modal-header {
  padding: 36rpx;
  text-align: center;
  border-bottom: 1rpx solid #F3F4F6;
  background: #F9FAFB;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
}

.modal-body {
  padding: 36rpx;
}

.modal-tip {
  font-size: 30rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
  text-align: center;
}

.modal-tip .highlight {
  color: #6366F1;
  font-weight: 600;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.input:focus {
  background: #fff;
  border-color: #6366F1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.input-hint {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 12rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #F3F4F6;
}

.modal-btn {
  flex: 1;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  border: none;
  border-radius: 0;
  background: #fff;
  transition: background 0.2s ease;
}

.modal-btn::after {
  border: none;
}

.modal-btn:active {
  background: #F9FAFB;
}

.cancel-btn {
  color: #6B7280;
  border-right: 1rpx solid #F3F4F6;
}

.confirm-btn {
  color: #6366F1;
  font-weight: 600;
}

.user-actions {
  margin-left: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 16rpx 28rpx;
  border-radius: 12rpx;
  line-height: 1.5;
  font-weight: 500;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.reset-btn {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(99, 102, 241, 0.3);
}

.reset-btn:active {
  transform: scale(0.95);
}

