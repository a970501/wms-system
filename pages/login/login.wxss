/* pages/login/login.wxss - UI/UX Pro Max */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(145deg, #6366F1 0%, #8B5CF6 50%, #A855F7 100%);
  padding: 0 48rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.login-container::before {
  content: '';
  position: absolute;
  top: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.login-container::after {
  content: '';
  position: absolute;
  bottom: -100rpx;
  left: -150rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
  padding-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.logo-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 88rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 1rpx;
}

.login-form {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  padding: 56rpx 40rpx;
  box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
  backdrop-filter: blur(20rpx);
}

.input-group {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 0 28rpx;
  margin-bottom: 28rpx;
  height: 108rpx;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.input-group:focus-within {
  background: #fff;
  border-color: #6366F1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.input-icon {
  width: 64rpx;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  opacity: 0.7;
}

.input {
  flex: 1;
  height: 108rpx;
  font-size: 32rpx;
  background: transparent;
  color: #1F2937;
}

.input::placeholder {
  color: #9CA3AF;
}

.eye-icon {
  width: 64rpx;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  opacity: 0.6;
  transition: opacity 0.2s;
}

.eye-icon:active {
  opacity: 1;
}

.login-btn {
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  margin-top: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(99, 102, 241, 0.4);
  transition: all 0.25s ease;
  letter-spacing: 4rpx;
}

.login-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 16rpx rgba(99, 102, 241, 0.3);
}

.login-btn[disabled] {
  background: linear-gradient(135deg, #A5B4FC 0%, #C4B5FD 100%);
  box-shadow: none;
}

.login-footer {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.version {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 1rpx;
}

