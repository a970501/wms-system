/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
  padding: 0 60rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150rpx;
  padding-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 50%;
  padding: 20rpx;
}

.logo-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.input-group {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 30rpx;
  height: 96rpx;
}

.input-icon {
  width: 60rpx;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}

.input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  background: transparent;
}

.eye-icon {
  width: 60rpx;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.login-btn:active {
  opacity: 0.9;
}

.login-btn[disabled] {
  background: #a0cfff;
}

.login-footer {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 60rpx;
}

.version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

