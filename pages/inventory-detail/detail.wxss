/* pages/inventory-detail/detail.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 160rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.header {
  padding: 30rpx;
  color: #fff;
}

.header.parts {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
}

.header.blank {
  background: linear-gradient(135deg, #722ed1 0%, #b37feb 100%);
}

.header.finished {
  background: linear-gradient(135deg, #52c41a 0%, #95de64 100%);
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.product-name {
  font-size: 40rpx;
  font-weight: bold;
}

.type-tag {
  background: rgba(255,255,255,0.25);
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.quantity-row {
  margin-top: 20rpx;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.quantity-value {
  font-size: 56rpx;
  font-weight: bold;
}

.quantity-value.negative {
  color: #ff6b6b;
}

.quantity-unit {
  font-size: 28rpx;
  opacity: 0.9;
}

.section {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.info-row {
  display: flex;
  padding: 12rpx 0;
}

.label {
  color: #999;
  font-size: 28rpx;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.value.highlight {
  color: #1890ff;
  font-weight: bold;
  font-size: 32rpx;
}

.value.negative {
  color: #ff4d4f;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.quick-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.quick-btn.add {
  background: rgba(255,255,255,0.25);
  color: #fff;
}

.quick-btn.reduce {
  background: rgba(0,0,0,0.15);
  color: #fff;
}

.quick-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.edit-btn {
  background: linear-gradient(135deg, #409EFF, #66b1ff);
  color: #fff;
}

.delete-btn {
  background: linear-gradient(135deg, #F56C6C, #f89898);
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 101;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #606266;
  display: block;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
}

.modal-btn.cancel {
  color: #909399;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #409EFF;
  font-weight: bold;
}

/* 历史记录样式 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-type {
  font-size: 32rpx;
  font-weight: bold;
}

.history-type.increase {
  color: #52c41a;
}

.history-type.decrease {
  color: #ff4d4f;
}

.history-date {
  font-size: 24rpx;
  color: #999;
}

/* 历史记录标签样式 */
.history-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #666;
}

.spec-tag {
  background: #e6f7ff;
  color: #1890ff;
}

.material-tag {
  background: #f6ffed;
  color: #52c41a;
}

.connection-tag {
  background: #fff1f0;
  color: #ff4d4f;
}

.history-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.history-detail {
  font-size: 26rpx;
  color: #666;
}

.history-footer {
  padding-top: 12rpx;
  border-top: 1rpx solid #e8e8e8;
}

.history-balance {
  font-size: 24rpx;
  color: #999;
}

.empty-history {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

