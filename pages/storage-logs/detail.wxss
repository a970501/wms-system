/* pages/storage-logs/detail.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.header {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  font-size: 48rpx;
  font-weight: bold;
}

.status {
  background: rgba(255,255,255,0.2);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
}

.status.success {
  background: rgba(82,196,26,0.2);
}

.status-text {
  font-size: 26rpx;
}

.section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 24rpx;
}

.section-title.warning {
  color: #fa8c16;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 26rpx;
  color: #999;
}

.info-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.info-value.success {
  color: #52c41a;
}

.failed-list, .detail-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.failed-item {
  background: #fff3e0;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #fa8c16;
}

.failed-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.failed-product {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.failed-spec {
  font-size: 26rpx;
  color: #666;
  background: rgba(0,0,0,0.05);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.failed-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.failed-reason {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0,0,0,0.05);
}

.reason-text {
  font-size: 24rpx;
  color: #fa8c16;
}

.detail-item {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.detail-product {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.detail-type {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
}

.detail-qty {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.detail-qty.negative {
  color: #ff4d4f;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}
