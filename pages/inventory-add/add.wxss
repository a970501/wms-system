/* pages/inventory-add/add.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item.row {
  display: flex;
  align-items: center;
}

.form-item.row .label {
  width: 160rpx;
  flex-shrink: 0;
  margin-bottom: 0;
}

.form-item.row .dropdown-wrapper,
.form-item.row .picker,
.form-item.row .input,
.form-item.row .qty-control {
  flex: 1;
}

.label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #F56C6C;
  margin-right: 4rpx;
}

.dropdown-wrapper {
  position: relative;
  flex: 1;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input.short {
  width: 200rpx;
}

.dropdown-list {
  position: absolute;
  top: 84rpx;
  left: 0;
  right: 0;
  background: #fff;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.dropdown-item {
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: #303133;
  border-bottom: 1rpx solid #ebeef5;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background: #f5f7fa;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #909399;
}

/* 数量控制 */
.qty-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  overflow: hidden;
  width: fit-content;
}

.qty-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #606266;
  background: #f5f7fa;
}

.qty-btn.disabled {
  color: #c0c4cc;
}

.qty-btn:active {
  background: #e4e7ed;
}

.qty-input {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-left: 1rpx solid #dcdfe6;
  border-right: 1rpx solid #dcdfe6;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 30rpx;
  padding: 20rpx 0;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #606266;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: 1rpx solid #dcdfe6;
}

.submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #a0cfff;
  color: #fff;
}

