/* pages/assembly/assembly.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.form-section, .records-section, .parts-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.remark-section {
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #F56C6C;
}


.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
  background: #fff;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 数量控制 */
.qty-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  overflow: hidden;
  width: fit-content;
}

.qty-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #606266;
  background: #f5f7fa;
}

.qty-btn.disabled {
  color: #c0c4cc;
}

.qty-btn:active {
  background: #e4e7ed;
}

.qty-input {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-left: 1rpx solid #dcdfe6;
  border-right: 1rpx solid #dcdfe6;
}

/* 所需零件表格 */
.parts-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.parts-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
}

.parts-hint {
  font-size: 24rpx;
  color: #909399;
}

.parts-table-wrapper {
  width: 100%;
  white-space: nowrap;
}

.parts-table {
  display: inline-block;
  min-width: 100%;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #ebeef5;
}

.table-header {
  background: #f5f7fa;
}

.table-header .table-cell {
  font-weight: bold;
  color: #606266;
}

.table-cell {
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  color: #303133;
  text-align: center;
  flex-shrink: 0;
}

.cell-name {
  width: 200rpx;
  text-align: left;
}

.cell-unit, .cell-need, .cell-stock {
  width: 140rpx;
}

.cell-stock.insufficient {
  color: #F56C6C;
  font-weight: bold;
}

/* 库存状态 */
.inventory-status {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.status-ok {
  display: flex;
  align-items: center;
  color: #67C23A;
  font-size: 28rpx;
}

.status-error {
  display: flex;
  align-items: center;
  color: #F56C6C;
  font-size: 28rpx;
}

.status-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #67C23A 0%, #5daf34 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  margin-bottom: 30rpx;
}

.submit-btn.btn-warning {
  background: linear-gradient(135deg, #E6A23C 0%, #cf9236 100%);
}

.submit-btn[disabled] {
  background: #b3e19d;
}

.records-list {
  max-height: 600rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ebeef5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-main {
  flex: 1;
}

.record-name {
  font-size: 30rpx;
  color: #303133;
  font-weight: 500;
}

.record-specs {
  margin-top: 10rpx;
}

.spec-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #909399;
  background: #f4f4f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.record-right {
  text-align: right;
}

.record-qty {
  font-size: 32rpx;
  color: #67C23A;
  font-weight: bold;
  display: block;
}

.record-time {
  font-size: 24rpx;
  color: #909399;
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: #909399;
  font-size: 28rpx;
}

