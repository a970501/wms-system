/* pages/change-password/change-password.wxss - UI/UX Pro Max */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #F8FAFC 0%, #EEF2FF 100%);
}

.header {
  text-align: center;
  padding: 48rpx 0 64rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
  display: block;
  letter-spacing: 1rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 16rpx;
  display: block;
}

.form-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.input-group {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.input-group:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #6366F1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.input {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
  color: #1F2937;
}

.eye-icon {
  padding: 20rpx;
  font-size: 40rpx;
  opacity: 0.6;
  transition: opacity 0.2s;
}

.eye-icon:active {
  opacity: 1;
}

.input-hint {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 12rpx;
}

.submit-btn {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(99, 102, 241, 0.4);
  transition: all 0.25s ease;
  letter-spacing: 2rpx;
}

.submit-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 16rpx rgba(99, 102, 241, 0.3);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #A5B4FC 0%, #C4B5FD 100%);
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

.tips-section {
  margin-top: 48rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 48rpx;
}

