/* pages/change-password/change-password.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f7fa;
}

.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #303133;
  display: block;
}

.header-desc {
  font-size: 26rpx;
  color: #909399;
  margin-top: 16rpx;
  display: block;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 40rpx;
}

.input-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EBEEF5;
}

.input-group:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.input {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  color: #303133;
}

.eye-icon {
  padding: 20rpx;
  font-size: 36rpx;
}

.input-hint {
  font-size: 24rpx;
  color: #909399;
  margin-top: 12rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  border-radius: 16rpx;
}

.submit-btn[disabled] {
  background: #a0cfff;
  color: rgba(255, 255, 255, 0.8);
}

.submit-btn::after {
  border: none;
}

.tips-section {
  margin-top: 60rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #606266;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #909399;
  line-height: 44rpx;
}

