/* pages/price-table/price-table.wxss - UI/UX Pro Max */
.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #F8FAFC 0%, #EEF2FF 100%);
  min-height: 100vh;
  /* 确保文字水平显示 */
  writing-mode: horizontal-tb;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1F2937;
  letter-spacing: 0.02em;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 14rpx 28rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.25s ease;
  line-height: 1.4;
}

.action-btn:active {
  transform: scale(0.95);
}

.add-btn {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(99, 102, 241, 0.3);
}

.export-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.3);
}

.edit-btn {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  color: #fff;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.delete-btn {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #fff;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #9CA3AF;
  font-size: 28rpx;
}

/* 单价列表 */
.price-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.price-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.25s ease;
}

.price-item:active {
  transform: scale(0.98);
}

.item-content {
  flex: 1;
  min-width: 0; /* 防止flex子项溢出 */
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1F2937;
  letter-spacing: 0.02em;
  /* 文字溢出处理 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 60%;
}

.unit-price {
  font-size: 34rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  /* 数字等宽显示 */
  font-variant-numeric: tabular-nums;
}

.item-details {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.detail-text {
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 500;
  line-height: 1.5;
  /* 添加背景标签样式 */
  background: #F3F4F6;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.item-actions {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  margin-left: 24rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #9CA3AF;
  margin-bottom: 48rpx;
  display: block;
  letter-spacing: 0.02em;
}

.add-first-btn {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
  transition: all 0.25s ease;
}

.add-first-btn:active {
  transform: scale(0.96);
}

/* 对话框 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.dialog {
  background: #fff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 620rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.dialog-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1F2937;
  letter-spacing: 0.02em;
}

.dialog-close {
  font-size: 44rpx;
  color: #9CA3AF;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}

.dialog-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 28rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 14rpx;
  font-weight: 600;
  letter-spacing: 0.02em;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #F9FAFB;
  transition: all 0.25s ease;
  color: #1F2937;
}

.input:focus {
  background: #fff;
  border-color: #6366F1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.input::placeholder {
  color: #9CA3AF;
}

.picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1F2937;
  background: #F9FAFB;
  transition: all 0.25s ease;
  box-sizing: border-box;
}

.picker:active {
  background: #EEF2FF;
  border-color: #6366F1;
}

.dialog-actions {
  display: flex;
  border-top: 1rpx solid #F3F4F6;
}

.dialog-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  background: #fff;
  color: #374151;
  transition: all 0.2s ease;
  line-height: 1.4;
}

.dialog-btn:active {
  background: #F9FAFB;
}

.confirm-btn {
  color: #6366F1;
  border-left: 1rpx solid #F3F4F6;
}

.cancel-btn {
  color: #6B7280;
}