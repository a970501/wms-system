/* pages/piecework-add/add.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #F56C6C;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.picker.placeholder {
  color: #999;
}

input {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

/* 下拉选择器样式 */
.dropdown-wrapper {
  position: relative;
}

.dropdown-input {
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.dropdown-input.placeholder {
  color: #999;
}

.dropdown-list {
  position: absolute;
  top: 84rpx;
  left: 0;
  right: 0;
  background: #fff;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  max-height: 400rpx;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.dropdown-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: #303133;
  border-bottom: 1rpx solid #ebeef5;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background: #f5f7fa;
}

textarea {
  width: 100%;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-item .label {
  margin-bottom: 0;
}

.price-display {
  font-size: 32rpx;
  color: #409EFF;
  font-weight: bold;
}

.btn-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.submit-btn {
  background: #409EFF;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.submit-btn[disabled] {
  background: #a0cfff;
}

/* 报废区域样式 */
.defective-section {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #fafafa;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.defective-section.active {
  background: #fff5f5;
  border-color: #F56C6C;
  box-shadow: 0 4rpx 12rpx rgba(245, 108, 108, 0.15);
}

.defective-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.defective-section.active .defective-header {
  border-bottom-color: #fdd;
}

.defective-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.defective-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
}

.defective-section.active .defective-title {
  color: #F56C6C;
}

.defective-label {
  color: #F56C6C !important;
}

.defective-input {
  border: 1rpx solid #fcc !important;
  background: #fff !important;
}

