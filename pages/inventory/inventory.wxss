/* pages/inventory/inventory.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.search-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #409EFF;
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.category-tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #606266;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #409EFF;
  color: #fff;
}

.action-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
}

.add-btn {
  background: linear-gradient(135deg, #409EFF 0%, #337ecc 100%);
}

.assembly-btn {
  background: linear-gradient(135deg, #67C23A 0%, #5daf34 100%);
}

.action-icon {
  font-size: 32rpx;
}

.inventory-list {
  max-height: calc(100vh - 450rpx);
}

.inventory-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.inventory-item:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

/* 库存警告状态 */
.inventory-item.warning {
  background: #fff5f5;
  border-left: 6rpx solid #F56C6C;
}

.inventory-item.empty {
  background: #fafafa;
  border-left: 6rpx solid #909399;
}

/* 库存角标 */
.stock-badge {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 12rpx;
  font-weight: bold;
}

.stock-badge.low {
  background: #E6A23C;
  color: #fff;
}

.stock-badge.empty {
  background: #909399;
  color: #fff;
}

.stock-badge.negative {
  background: #F56C6C;
  color: #fff;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.arrow {
  font-size: 36rpx;
  color: #c0c4cc;
  font-weight: bold;
}

.item-main {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  display: block;
  margin-bottom: 12rpx;
}

.item-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.spec-tag {
  background: #e6f7ff;
  color: #1890ff;
}

.material-tag {
  background: #f6ffed;
  color: #52c41a;
}

.connection-tag {
  background: #fff1f0;
  color: #ff4d4f;
}

.item-quantity {
  text-align: right;
  min-width: 120rpx;
}

.quantity-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #409EFF;
  display: block;
}

.item-quantity.negative .quantity-value {
  color: #F56C6C;
}

.quantity-unit {
  font-size: 24rpx;
  color: #909399;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

