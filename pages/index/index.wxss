/* pages/index/index.wxss - UI/UX Pro Max */
.container {
  padding: 32rpx;
  background: linear-gradient(180deg, #F8FAFC 0%, #EEF2FF 100%);
  min-height: 100vh;
}

/* 欢迎卡片 */
.welcome-card {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #A855F7 100%);
  border-radius: 32rpx;
  padding: 48rpx 36rpx;
  margin-bottom: 32rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 16rpx 48rpx rgba(99, 102, 241, 0.35);
  position: relative;
  overflow: hidden;
}

.welcome-card::before {
  content: '';
  position: absolute;
  top: -60rpx;
  right: -60rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.welcome-card::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  left: 30%;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.welcome-text {
  position: relative;
  z-index: 1;
}

.welcome-text .greeting {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
  font-weight: 400;
}

.welcome-text .username {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.date-info {
  font-size: 26rpx;
  opacity: 0.85;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  position: relative;
  z-index: 1;
}

/* 统计卡片 */
.stats-section {
  margin-bottom: 32rpx;
}

.stats-title, .section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 24rpx;
  letter-spacing: 0.5rpx;
}

.stats-grid {
  display: flex;
  gap: 24rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(99, 102, 241, 0.08);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #6366F1, #8B5CF6);
  opacity: 0;
  transition: opacity 0.3s;
}

.stat-card:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-card:active::before {
  opacity: 1;
}

.stat-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  display: block;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #6366F1, #8B5CF6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 12rpx;
  display: block;
}

.stat-label {
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 500;
}

/* 快捷操作 */
.quick-actions {
  margin-bottom: 32rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.action-item:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  background: #F8FAFC;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 最近记录 */
.recent-section {
  margin-bottom: 32rpx;
}

.recent-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  position: relative;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background: #F9FAFB;
}

.record-item.has-defect {
  background: linear-gradient(90deg, #FEF2F2 0%, #fff 100%);
  border-left: 6rpx solid #EF4444;
}

.record-main {
  flex: 1;
}

.product-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-product {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-right: 16rpx;
}

.semi-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  color: #059669;
  font-weight: 500;
}

.record-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.spec-tag {
  background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
  color: #6366F1;
}

.material-tag {
  background: #F3F4F6;
  color: #6B7280;
}

.record-info {
  text-align: right;
}

.record-quantity {
  font-size: 30rpx;
  color: #1F2937;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 600;
}

.record-amount {
  font-size: 28rpx;
  color: #10B981;
  font-weight: 700;
}

.defect-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #9CA3AF;
}

.empty-text {
  font-size: 30rpx;
  margin-top: 24rpx;
}