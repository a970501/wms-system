.container{padding:20rpx;background:#f5f5f5;min-height:100vh;box-sizing:border-box}
.card{background:#fff;border-radius:16rpx;padding:20rpx;margin-bottom:20rpx}
.row{margin-bottom:18rpx}
.label{display:block;font-size:26rpx;color:#606266;margin-bottom:10rpx}
.picker{height:80rpx;line-height:80rpx;background:#f5f5f5;border-radius:10rpx;padding:0 20rpx;font-size:28rpx}
.picker.placeholder{color:#999}
.btn-row{display:flex;gap:16rpx;margin-top:10rpx}
.btn{flex:1;border-radius:10rpx;font-size:30rpx;height:84rpx;line-height:84rpx}
.btn.primary{background:#409EFF;color:#fff}
.summary{display:flex;background:#fff;border-radius:16rpx;padding:18rpx;margin-bottom:16rpx}
.sum-item{flex:1;text-align:center}
.sum-num{display:block;font-size:34rpx;font-weight:700;color:#303133}
.sum-label{display:block;font-size:24rpx;color:#909399;margin-top:6rpx}
.tabs{display:flex;background:#fff;border-radius:16rpx;overflow:hidden;margin-bottom:12rpx}
.tab{flex:1;text-align:center;padding:22rpx 0;font-size:28rpx;color:#606266}
.tab.active{background:#409EFF;color:#fff}
.list{height:calc(100vh - 560rpx)}
.item{background:#fff;border-radius:16rpx;padding:18rpx;margin-bottom:12rpx}
.title{font-size:30rpx;color:#303133;font-weight:600;margin-bottom:8rpx}
.sub{font-size:24rpx;color:#909399;line-height:34rpx}
.empty{text-align:center;color:#C0C4CC;padding:40rpx 0}
.stats-section{margin-bottom:20rpx}
.stats-title{font-size:28rpx;font-weight:600;color:#409EFF;padding:16rpx;background:#f0f7ff;border-radius:10rpx;margin-bottom:12rpx}
